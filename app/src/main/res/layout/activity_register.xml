<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginandregister.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/brown_1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/pol"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/brown_1"
            android:src="@drawable/_back3" />


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown_1" />


    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:text="@string/face3"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="@string/face2.1" />



    <EditText
        android:id="@+id/code1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="@string/face2.3" />

    <EditText
        android:id="@+id/code2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="请确认密码"/>
    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:text="@string/face2.5"
        android:textColor="@color/white"/>

</LinearLayout>